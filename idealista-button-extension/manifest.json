{
    "manifest_version": 3,
    "name": "ImobFlash Agent",
    "version": "2.0",
    "description": "Agente inteligente para monitoramento e gestão de conversas imobiliárias.",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "storage",
        "tabs",
        "scripting"
    ],
    "host_permissions": [
        "https://www.idealista.pt/*",
        "https://*.supabase.co/*"
    ],
    "content_scripts": [
        {
            "matches": ["https://www.idealista.pt/conversations*"],
            "js": ["database.js", "content.js"],
            "run_at": "document_idle"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": ["overlay.js", "overlay.css", "logs-popup.html"],
            "matches": ["https://www.idealista.pt/*"]
        }
    ]
}
